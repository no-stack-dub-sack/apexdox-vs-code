{
	"name": "apexdoc2-vscode",
	"displayName": "ApexDoc2 VS Code",
	"description": "The VS Code companion extension for ApexDoc2, making documenting your Salesforce Apex files an easy, integrated experience when using VS Code for Salesforce development.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.runApexDoc2",
		"onCommand:extension.openDocs"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runApexDoc2",
				"title": "ApexDoc2: Run"
			},
			{
				"command": "extension.openDocs",
				"title": "ApexDoc2: Open Docs"
			}
		]
	},
	"configuration": {
		"type": "object",
		"title": "ApexDoc2 VS Code Configuration",
		"properties": {
			"apexdoc2.config": {
				"type": "object",
				"default": {
					"sourceDirectory": "",
					"includes": [],
					"excludes": [],
					"targetDirectory": "",
					"sourceControlURL": "",
					"homePagePath": "",
					"bannerPagePath": "",
					"scope": [
						"global",
						"public",
						"protected",
						"private",
						"testMethod",
						"webService"
					],
					"title": "ApexDocs",
					"showTOCSnippets": true,
					"sortOrder": "alpha",
					"port": 8080,
					"assets": []
				},
				"description": "Configure ApexDoc2 to document your Apex .cls files."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/express": "^4.16.1",
		"@types/lodash": "^4.14.123",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/open": "^6.0.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"express": "^4.16.4",
		"lodash": "^4.17.11",
		"open": "^6.0.0"
	}
}
