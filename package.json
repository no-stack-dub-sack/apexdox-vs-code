{
	"name": "apexdoc2-vscode",
	"displayName": "ApexDoc2 VS Code",
	"description": "A lightweight extension that makes documenting your Salesforce Apex files an easy, integrated experience when using VS Code for Salesforce development.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:apex",
		"onCommand:apexDoc2.runApexDoc",
		"onCommand:apexDoc2.serveDocs"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "apexDoc2.runApexDoc",
				"title": "ApexDoc2: Run"
			},
			{
				"command": "apexDoc2.serveDocs",
				"title": "ApexDoc2: Open Docs"
			},
			{
				"command": "apexDoc2.insertDocBlock",
				"title": "ApexDoc2: Stub ApexDoc2 Comment"
			}
		],
		"languages": [
			{
				"id": "apex",
				"configuration": "./src/syntaxes/apex.configuration.json",
				"extensions": [
					".cls",
					".apex",
					".trigger",
					".tgr"
				],
				"aliases": [
					"Apex"
				]
			}
		],
		"grammars": [
			{
				"path": "./src/syntaxes/apex.tmLanguage.injection.json",
				"scopeName": "apex-doc-comment.injection",
				"injectTo": [
					"source.apex"
				]
			}
		]
	},
	"configuration": {
		"type": "object",
		"title": "ApexDoc2 VS Code Configuration",
		"properties": {
			"apexdoc2.config": {
				"type": "object",
				"default": {
					"sourceDirectory": "",
					"includes": [],
					"excludes": [],
					"targetDirectory": "",
					"sourceControlURL": "",
					"homePagePath": "",
					"bannerPagePath": "",
					"scope": [
						"global",
						"public",
						"protected",
						"private",
						"testMethod",
						"webService"
					],
					"title": "ApexDocs",
					"showTOCSnippets": true,
					"sortOrder": "alpha",
					"port": 8080,
					"assets": [],
					"cleanDir": false
				},
				"description": "Configure ApexDoc2 to document your Apex .cls files."
			},
			"apexdoc2.stubs.alignItems": {
				"type": "boolean",
				"default": false,
				"description": "Vertically align anything after an ApexDoc2 @tag. Defaults to 'false'."
			},
			"apexdoc2.stubs.omitDescriptionTag": {
				"type": "boolean",
				"default": true,
				"description": "ApexDoc2 '@description' tags are optional. Set this to false to include them. Defaults to 'true'."
			},
			"apexdoc2.stubs.spacious": {
				"type": "boolean",
				"default": false,
				"description": "When set to true ApexDoc2 comment stubs will add an empty line after the description line and before the next tag. Defaults to 'false'."
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test",
		"yaml-2-grammar": "node ./src/syntaxes/convert.grammar.js"
	},
	"devDependencies": {
		"@types/express": "^4.16.1",
		"@types/lodash.escape": "^4.0.6",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/open": "^6.0.0",
		"@types/pretty": "^2.0.0",
		"@types/rimraf": "^2.0.2",
		"js-yaml": "^3.13.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"express": "^4.16.4",
		"lodash.escape": "^4.0.1",
		"open": "^6.0.0",
		"pretty": "^2.0.0",
		"rimraf": "^2.6.3"
	}
}
